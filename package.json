{
  "name": "FILL",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test test/unit/*_test.js --network hardhat",
    "test-staging": "hardhat test test/staging/*_test.js --network goerli",
    "lint": "solhint 'contracts/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
